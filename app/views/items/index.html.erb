<p id="notice"><%= notice %></p>

<h1>Listing Items</h1>

<table>
  <thead>
    <tr>
      <th>Parent</th>
      <th>Category</th>
      <th>Model</th>
      <th>Brand</th>
      <th>Invoice</th>
      <th>Department</th>
      <th>Serial number</th>
      <th>Country of orgin</th>
      <th>Price</th>
      <th>Weight</th>
      <th>State</th>
      <th>Barcode</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.parent %></td>
        <td><%= item.category %></td>
        <td><%= item.model %></td>
        <td><%= item.brand %></td>
        <td><%= item.invoice %></td>
        <td><%= item.department %></td>
        <td><%= item.serial_number %></td>
        <td><%= item.country_of_orgin %></td>
        <td><%= item.price %></td>
        <td><%= item.weight %></td>
        <td><%= item.state %></td>
        <td><%= item.barcode %></td>
        <td><%= item.note %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

